<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AE9D9D"
    android:id="@+id/multiplayer4">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Temps restant : 30 s"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14" />

    <TextView
        android:id="@+id/scoreTextViewADV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ADV Score: 0"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mon Score: 0"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.339" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreTextView"
        app:layout_constraintVertical_bias="0.493"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/replay"
            android:layout_width="141dp"
            android:layout_height="63dp"
            android:layout_margin="10dp"
            android:backgroundTint="#83AC7F"
            android:text="Reprendre">

        </Button>

        <Button
            android:id="@+id/quit"
            android:layout_width="141dp"
            android:layout_height="63dp"
            android:backgroundTint="#A86161"
            android:text="Quitter">

        </Button>
    </LinearLayout>

    <ListView
        android:id="@+id/deviceListView"
        android:layout_width="303dp"
        android:layout_height="234dp"
        android:background="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="127dp"
        android:layout_height="120dp"
        android:backgroundTintMode="add"
        android:foregroundTint="@color/black"
        android:mirrorForRtl="false"
        android:progressTint="#FFFFFF"
        android:scrollbarStyle="insideOverlay"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/deviceListView"
        app:layout_constraintEnd_toEndOf="@+id/deviceListView"
        app:layout_constraintStart_toStartOf="@+id/deviceListView"
        app:layout_constraintTop_toTopOf="@+id/deviceListView" />


</androidx.constraintlayout.widget.ConstraintLayout>